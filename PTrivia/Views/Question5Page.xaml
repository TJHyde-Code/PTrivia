<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:PTrivia.Models"
             xmlns:d="clr-namespace:PTrivia.Data"    
             xmlns:v="clr-namespace:PTrivia.ViewModels"
             x:Class="PTrivia.Views.Question5Page"
             Title="The Lead-up!"
             Background="Transparent">

    <Grid>
        
        <Frame BackgroundColor="Transparent"
               BorderColor="Transparent"
               Padding="0"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="500" HeightRequest="400">
            
            <Grid>
                
                <Image x:Name="wotImage"
                       Source="wot.png"
                       Opacity="0.0"  
                       Aspect="AspectFill"                   
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand" />

                  
                    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
                        
                        <Label x:Name="welcomeLabel"
                           FontSize="20"
                           TextColor="White"
                           HorizontalOptions="Center">
                            <Label.Shadow>
                                <Shadow Brush="Black" Offset="1,1" Opacity="0.7" Radius="3"/>
                            </Label.Shadow>
                        </Label>

                        <Label x:Name="scoreLabel"
                           FontSize="16"
                           TextColor="White"
                           HorizontalOptions="Center">
                            <Label.Shadow>
                                <Shadow Brush="Black" Offset="1,1" Opacity="0.7" Radius="3"/>
                            </Label.Shadow>
                        </Label>

                        
                        <Label x:Name="questionLabel"
                           Text="Loading question..."
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           Margin="0,10">
                            <Label.Shadow>
                                <Shadow Brush="White" Offset="1,1" Opacity="0.8" Radius="3"/>
                            </Label.Shadow>
                        </Label>

                        
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                            <Entry x:Name="entryAnswer1"
                               WidthRequest="60"
                               TextChanged="OnTextChanged" />
                            <Entry x:Name="entryAnswer2"
                               WidthRequest="60"
                               TextChanged="OnTextChanged" />
                            <Entry x:Name="entryAnswer3"
                               WidthRequest="60"
                               TextChanged="OnTextChanged" />
                            <Entry x:Name="entryAnswer4"
                               WidthRequest="60"
                               TextChanged="OnTextChanged" />
                        </HorizontalStackLayout>
                       
                        <Button x:Name="btnLeadUp"
                            Text="OK"
                            WidthRequest="80"
                            Clicked="btnLeadUp_Clicked"
                            BackgroundColor="#007aff"
                            TextColor="White" />
                    </VerticalStackLayout>

            </Grid>

        </Frame>

    </Grid>
</ContentPage>

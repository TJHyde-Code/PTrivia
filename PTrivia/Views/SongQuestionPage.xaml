<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:PTrivia.Models"
             xmlns:d="clr-namespace:PTrivia.Data"    
             xmlns:v="clr-namespace:PTrivia.ViewModels"
             x:Class="PTrivia.SongQuestionPage"
             Title="MUSIC!!">



    <ContentPage.Content>
        <ScrollView>

            <VerticalStackLayout 
                Padding="30" 
                Spacing="25"
                VerticalOptions="Center">
                <Label 
                    x:Name="welcomeLabel"
                    FontSize="24"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    TextColor="DarkSlateBlue" />        

                <Label 
                    x:Name="greetingLabel"
                    FontSize="22"
                    TextColor="DarkSlateBlue"
                    HorizontalOptions="Center" />

                
                <Label 
                    x:Name="questionLabel"
                    FontSize="20"
                    FontAttributes="Bold"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center" />

                
                <Entry 
                    x:Name="songEntry"
                    Placeholder="Type your answer here"
                    FontSize="18"
                    WidthRequest="250"
                    ClearButtonVisibility="WhileEditing"
                    TextChanged="songEntry_TextChanged"/>

                
                <Button 
                    x:Name="btnSongAnswer"
                    Text="OK"
                    FontSize="18"
                    WidthRequest="80"
                    Clicked="SongAnswerClicked"
                    BackgroundColor="#512DA8"
                    TextColor="White" />

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
